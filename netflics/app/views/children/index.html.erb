<div class="series">


<h1><strong>Available Accounts</strong></h1>


    <% current_user.children.each do |child| %>
            <!-- <h4 align="center"> -->
          <div class="col-med-3">

            <p class="link-movie"><%= child.name%></p>

            <%= link_to "Edit", edit_child_path(child),
            :class => "btn btn-primary"  %>

            <%= link_to 'Delete Serie', child_path(child), method: :delete,
            data: { confirm: 'Are you sure you want to delete '+child.name+'?' },
            :class => "btn btn-danger"  %>

          </div>

      <%end%>

</div>
