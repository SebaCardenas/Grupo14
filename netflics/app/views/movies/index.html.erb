<!DOCTYPE html>
<html>


<h1>Available Series</h1>

<% if @movies.any? %>
  	<% @movies.each do |movie| %>
      <a href="/movies/<%= movie.id %>">
        <%= image_tag movie.movie_img.url(:movie_index)%>
      </a>
		<!-- <h2><%= link_to movie.title, movie %></h2> -->
	<% end %>
<% else %>
	<p>The Database is empty! </p>

<% end %>
<% if can? :update, Movie %>
<%= link_to 'Add a new Serie', new_movie_path, :class => "btn btn-primary"  %>
<%end %>



</html>
