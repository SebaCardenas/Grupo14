<!DOCTYPE html>
<html>
<div class="col-md-6 col-md-offset-3">
<div class="series">


<h1>Available Series</h1>

<% if @movies.any? %>

    <% @movies.each do |movie| %>
      <div class="div-order">
        <a href="/movies/<%= movie.id %>">
          <%= image_tag movie.movie_img.url(:movie_index), class: "movie"%>
        </a>
        <h4><%= movie.title%></h4>
      </div>

    <% end %>
    
<% else %>
	<p>The Database is empty! </p>
<% end %>

<% if can? :update, Movie %>
<%= link_to 'Add a new Serie', new_movie_path, :class => "btn btn-primary"  %>
<%end %>



</div>


</div>
</html>


