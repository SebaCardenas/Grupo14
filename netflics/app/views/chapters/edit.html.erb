<div class="col-md-6 col-md-offset-3">
    <div class="edit-movie-form">
      <h1>Edit Series</h1>
        <%= simple_form_for ([@movie, @chapter]) do |f| %>
        <% if @chapter.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@chapter.errors.count, "error") %>
                prohibited this movie from being saved:</h2>
            <ul>
                <% @chapters.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class =>"form-control" %>
  </p>
  <p>
    <%= f.label :duration %><br>
    <%= f.text_field :duration, :class =>"form-control" %>
  </p>
  <p>
    <%= f.label :season %><br>
    <%= f.text_field :season, :class =>"form-control" %>
  </p>
  
  <p>
    <%= f.button :submit, :class => "btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Back to index', movies_path, :class => "btn btn-info"  %>

    </div>
</div>
